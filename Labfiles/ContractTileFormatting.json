{
  "$schema": "https://developer.microsoft.com/json-schemas/sp/v2/tile-formatting.schema.json",
  "hideSelection": true,
  "height": "402",
  "width": "388",
  "formatter": {
    "elmType": "div",
    "style": {
      "display": "flex",
      "align-items": "stretch",
      "margin-bottom": "16px",
      "width": "1232px",
      "flex-grow": "1",
      "flex-wrap": "wrap",
      "justify-content": "flex-start",
      "margin": "-4px -4px"
    },
    "children": [
      {
        "elmType": "div",
        "style": {
          "width": "382px",
          "height": "392px",
          "display": "flex",
          "justify-content": "space-between",
          "flex-direction": "column",
          "box-shadow": "0px 0px 7px rgba(0, 0, 0, 0.15)",
          "margin": "8px",
          "overflow": "hidden"
        },
        "attributes": {
          "class": "ms-bgColor-neutralLighterAlt"
        },
        "children": [
          {
            "elmType": "div",
            "children": [
              {
                "elmType": "div",
                "style": {
                  "color": "white",
                  "background-color": "=if([$Status] == 'New', '#00b7c3', if([$Status] == 'In review', '#ffaa44', if([$Status] == 'Approved', '#0078d4', if([$Status] == 'Rejected', '#d13438', '#8378de'))))",
                  "padding": "5px 15px",
                  "height": "auto",
                  "text-transform": "uppercase",
                  "font-size": "12.5px"
                },
                "txtContent": "[$Status]"
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "color": "#323130",
              "font-size": "17px",
              "font-weight": "600",
              "text-overflow": "ellipsis",
              "overflow": "hidden",
              "display": "-webkit-box",
              "-webkit-line-clamp": "2",
              "-webkit-box-orient": "vertical",
              "padding": "5px 15px",
              "height": "auto",
              "margin-top": "7px",
              "margin-bottom": "6px"
            },
            "txtContent": "[$FileLeafRef]"
          },
          {
            "elmType": "div",
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "justify-content": "flex-start",
                  "flex-wrap": "wrap",
                  "padding-top": "8px",
                  "overflow": "hidden",
                  "width": "100%",
                  "height": "auto"
                },
                "children": [
                  {
                    "elmType": "div",
                    "style": {
                      "background-color": "#f5f5f5",
                      "padding": "5px",
                      "width": "180px"
                    },
                    "children": [
                      {
                        "elmType": "img",
                        "attributes": {
                          "src": "@thumbnail.large"
                        },
                        "style": {
                          "width": "185px",
                          "height": "248px"
                        }
                      }
                    ]
                  },
                  {
                    "elmType": "div",
                    "style": {
                      "background-color": "#f5f5f5",
                      "padding": "5px",
                      "width": "180px"
                    },
                    "children": [
                      {
                        "elmType": "div",
                        "style": {
                          "color": "#767676",
                          "font-size": "12px"
                        },
                        "txtContent": "Client"
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "margin-bottom": "12px",
                          "font-size": "16px",
                          "font-weight": "600"
                        },
                        "txtContent": "[$Client]"
                      },
                      {
                        "elmType": "div",
                        "txtContent": "Contractor",
                        "style": {
                          "color": "#767676",
                          "font-size": "12px",
                          "margin-bottom": "2px"
                        }
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "margin-bottom": "12px",
                          "font-size": "14px"
                        },
                        "txtContent": "[$Contractor]"
                      },
                      {
                        "elmType": "div",
                        "txtContent": "Fee amount",
                        "style": {
                          "color": "#767676",
                          "font-size": "12px",
                          "margin-bottom": "2px"
                        }
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "margin-bottom": "12px",
                          "font-size": "14px"
                        },
                        "txtContent": "[$Fee_x0020_Amount]"
                      },
                      {
                        "elmType": "div",
                        "txtContent": "Classified",
                        "style": {
                          "color": "#767676",
                          "font-size": "12px",
                          "margin-bottom": "2px"
                        }
                      },
                      {
                        "elmType": "div",
                        "style": {
                          "margin-bottom": "12px",
                          "font-size": "14px"
                        },
                        "txtContent": "[$PrimeLastClassified]"
                      }
                    ]
                  }
                ]
              }
            ]
          },
          {
            "elmType": "div",
            "style": {
              "display": "flex",
              "justify-content": "flex-end",
              "padding": "4px 4px"
            },
            "children": [
              {
                "elmType": "div",
                "style": {
                  "display": "flex",
                  "align-items": "center",
                  "height": "40px"
                },
                "children": [
                  {
                    "elmType": "button",
                    "customRowAction": {
                      "action": "defaultClick"
                    },
                    "style": {
                      "font-weight": "600",
                      "margin": "0px 4px",
                      "line-height": "100%",
                      "text-decoration": "none",
                      "border": "none",
                      "padding": "8px 20px",
                      "text-align": "center",
                      "display": "inline-block",
                      "cursor": "pointer",
                      "border-radius": "2px",
                      "background-color": "#5E163A",
                      "color": "white"
                    },
                    "txtContent": "Details"
                  }
                ]
              }
            ]
          }
        ]
      }
    ]
  }
}